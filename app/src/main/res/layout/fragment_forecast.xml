                android:layout_weight="1" />

            <TextView
                android:id="@+id/day5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|center_vertical"
                android:text="Fifth day"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/temperature5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|center_vertical"
                android:text="-"
                android:textSize="20sp" />
        </TableRow>

    </TableLayout>

</FrameLayout>